{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["esnext", "dom"],
        "types": [
            "vue/ref-macros",
            "@dcloudio/types",
            "vite/client",
            "@mini-types/alipay",
            "@types/weixin-app",
            "mini-types"
        ],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "@types",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "vite.config.ts"
, "unocss.config.ts"    ]
}
